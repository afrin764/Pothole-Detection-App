            android:name=".MainActivityDetect"
            android:exported="false" />
        <activity
            android:name=".MainActivityPost"
            android:exported="false" />
        <activity
            android:name=".MainActivityBlogs"
            android:exported="false" />
        <activity
            android:name=".MainActivityProfile"
            android:exported="false" />
        <activity
            android:name=".MainActivityHome"
            android:exported="false" />
        <activity
            android:name=".MainActivitySignIn"
            android:exported="false" />
        <activity
            android:name=".MainActivityAnimation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>